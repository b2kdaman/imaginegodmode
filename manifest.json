{
  "manifest_version": 3,
  "name": "ImagineGodMode",
  "version": "2.8.7",
  "description": "Media fetching, downloading, upscaling, and prompt management for Grok",
  "permissions": [
    "storage",
    "downloads",
    "activeTab"
  ],
  "host_permissions": [
    "https://grok.com/*",
    "https://www.grok.com/*"
  ],
  "background": {
    "scripts": [
      "src/background/service-worker.ts"
    ],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://grok.com/*",
        "https://www.grok.com/*"
      ],
      "js": [
        "src/content/content-script.tsx"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "ImagineGodMode"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "themes.json"
      ],
      "matches": [
        "https://grok.com/*",
        "https://www.grok.com/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "imaginegodmode@b2kdaman.com",
      "strict_min_version": "109.0"
    }
  }
}