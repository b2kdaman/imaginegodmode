{
  "name": "imaginegodmode-chrome-extension",
  "version": "2.18.0",
  "description": "ImagineGodMode - Chrome extension for Grok media management with React",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:chrome",
    "build:chrome": "node scripts/build.js chrome",
    "build:firefox": "node scripts/build.js firefox",
    "build:check": "tsc --noEmit && vite build",
    "build:zip": "npm run build:chrome && node scripts/zip-dist.js chrome",
    "build:firefox:zip": "npm run build:firefox && node scripts/zip-dist.js firefox",
    "zip": "node scripts/zip-dist.js",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "npm run lint:eslint && npm run lint:types",
    "lint:eslint": "eslint . --ext .ts,.tsx",
    "lint:eslint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:types": "tsc --noEmit --strict",
    "generate-icons": "node scripts/generate-icons.js",
    "process-bg": "node scripts/process-background.js",
    "ios:build": "./scripts/build-ios.sh",
    "ios:open": "open ios/imagineGodMode/imagineGodMode.xcodeproj",
    "ios:deploy": "npm run ios:build && npm run ios:open",
    "ios:simulator": "xcodebuild -project ios/imagineGodMode/imagineGodMode.xcodeproj -scheme imagineGodMode -destination 'platform=iOS Simulator,name=iPhone 15' build",
    "ios:clean": "xcodebuild -project ios/imagineGodMode/imagineGodMode.xcodeproj -scheme imagineGodMode clean",
    "ios:icons": "./scripts/generate-ios-icons.sh",
    "check-translations": "node scripts/check-translations.js"
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "@mdi/react": "^1.6.1",
    "react": "^18.3.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.3.1",
    "react-tooltip": "^5.30.0",
    "uuid": "^13.0.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.23",
    "@eslint/js": "^9.39.1",
    "@types/chrome": "^0.0.268",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitejs/plugin-react": "^4.3.1",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "postcss": "^8.4.38",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3",
    "vite": "^5.3.3"
  }
}
